{
	"name": "discord-tools",
	"displayName": "Discord Tools",
    "description": "Enable you to generate and complete your Discord code more fast",
    "icon": "./images/logo.png",
    "version": "1.0.0",
    "publisher": "Darkempire78",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
            {
                "command": "discord-tools.pyBotTemplate",
				"title": "Generate a python template bot (Discord.py)"
            },
            {
                "command": "discord-tools.jsBotTemplate",
				"title": "Generate a javascript template bot (Discord.js)"
            }
        ],
        "snippets": [
			{
				"language": "python",
				"path": "./Snippets/pySnippets.code-snippets"
            },
            {
				"language": "javascript",
				"path": "./Snippets/jsSnippets.code-snippets"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
